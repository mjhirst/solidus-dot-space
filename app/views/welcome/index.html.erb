<div class="container">

<!-- Start Tags UI for ActionCable / JS -->
<div class="field is-grouped is-grouped-multiline">
  
  <div class="control">
    <div class="tags has-addons">
      <span class="tag is-dark is-rounded">clients</span>
      <span class="tag is-rounded is-light" style="background-color: #747679; "id="clientsTag"><%= ActionCable.server.connections.length %></span>
    </div>
  </div>

  <div class="control">
    <div class="tags has-addons">
      <span class="tag is-dark is-rounded">x:</span>
      <span class="tag is-rounded is-light" style="background-color: #747679; "id="mouseX">0</span>
    </div>
  </div>

  <div class="control">
    <div class="tags has-addons">
      <span class="tag is-dark is-rounded">y:</span>
      <span class="tag is-rounded is-light" style="background-color: #747679; "id="mouseY">0</span>
    </div>
  </div>
  
</div>
<!-- End Tags -->

<div class="columns">
  
