<body style="background-color: #22262d">
 
<div class="container has-text-light">
<%= render 'main_nav' %>
 
<h2 class="title has-text-light">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "label has-text-light" %><br />
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, class: "label has-text-light" %><br />
    <div class="control">
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "checkbox"%>
      <%= f.label :remember_me, class: "checkbox" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div> <!-- End Container -->